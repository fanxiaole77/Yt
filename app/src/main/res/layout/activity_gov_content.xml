<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Gov.GovContentActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/p"
        app:title="诉求详情页"
        android:background="#ff0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <androidx.cardview.widget.CardView
         app:cardMaxElevation="50dp"
         android:layout_marginTop="20dp"
         android:layout_gravity="center_horizontal"
         android:layout_width="350dp"
         android:layout_height="500dp">
         <LinearLayout
             android:padding="10dp"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/gg_title"
                 android:layout_marginTop="20dp"
                 android:layout_gravity="center_horizontal"
                 android:textStyle="bold"
                 android:textSize="20sp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <ImageView
                 android:id="@+id/gg_image"
                 android:scaleType="fitXY"
                 android:layout_marginTop="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="120dp"/>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="20dp"
                     android:text="诉求内容"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/gg_content"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:text="承办单位"
                     android:textSize="20sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/gg_danwei"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="20sp"
                     android:text="提交时间"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/gg_shijian"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="20sp"
                     android:text="处理状态"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/gg_zhuangtai"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="20sp"
                     android:text="处理结果"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:textSize="20sp"
                     android:id="@+id/gg_jieguo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

             </LinearLayout>

         </LinearLayout>

     </androidx.cardview.widget.CardView>



</LinearLayout>